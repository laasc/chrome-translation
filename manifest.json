{

    "name": "翻译小点鸡",
    "version": "1.0",
    "description": "浏览器翻译插件扩展，支持多国语言、双语对照等。",
    "icons": {
        "128": "img/logo_128.png",
        "48": "img/logo_128.png",
        "16": "img/logo_128.png"
    },
    "manifest_version": 2,
    "browser_action": {
        "default_icon": "img/logo_128.png",
        "default_popup": "popup.html",
        "default_title": "划词翻译"
    },
    "background": {
        "scripts": ["js/background.js"],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "css": ["css/content-script.css"],
            "js": ["js/content-script.js"]
        }
    ],
    "options_page": "options.html",
    "permissions": [
        "activeTab",
        "storage",
        "tabs",
        "contextMenus"
    ]
}